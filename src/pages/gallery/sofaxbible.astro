---
import type { ImageMetadata } from "astro";
import GalleryLayout from "../../layouts/GalleryLayout.astro";

var images = import.meta.glob<{ default: ImageMetadata }>("../../../public/images/albums/sofaxbible/*");
const fontColor = "#f74376";
const backgroundColor = "#FBE7E6";
const albumName = "Sofa & Bible";

const cc = new Map([
  ["Camera:", "Canon A-1"],
  ["Film:", "Fujifilm Xtra-400"],
  ["D&S at", "XANAP Filmlab"],
]);
---

<GalleryLayout
  title={albumName}
  backgroundColor={backgroundColor}
  fontColor={fontColor}
  imageData={images}
  curtainCall={cc}
/>
